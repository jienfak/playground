# Jien's zshrc.
autoload -Uz compinit promptinit
compinit
promptinit
zstyle ':completion:*' menu select

PROMPT='%F{red}%n%f@%F{blue}%m%f:%F{yellow}%~%f%(!.#.$)'
RPROMPT='[%F{yellow}%?%f,%F{blue}%L%f](%F{red}%T%f)'

#source ~/path/to/fsh/fast-syntax-highlighting.plugin.zsh
#zplugin light zdharma/fast-syntax-highlighting

echo "Trying to get any editor..."
which nvim > /dev/null
echo "Checking Neovim..."
if test $status = 0 ; then
	# Neovim.
	echo "Got Neovim."
	export EDITOR=$(which nvim)
else
	# Vim.
	which vim > /dev/null
	echo "Checking Vim..."
	if test $status = 0 ; then
		export EDITOR=$(which vim)
	else
		# Nano.
		which nano > /dev/null
		echo "Checking nano..."
		if test $status = 0 ;then
			export EDITOR=$(which nano)
		else
			export EDITOR=$(which cat)
		fi
	fi
fi
alias ed=$EDITOR

S=$HOME/code/scipts
echo  'FAK::Freedom:Anarchy:Knowledge::FAK'
echo 'FAKYOU... why are you using zsh? Fish is better.'
